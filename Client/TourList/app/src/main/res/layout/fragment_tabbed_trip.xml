<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ar_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:src="@android:drawable/ic_menu_view"
        android:textStyle="bold"
        app:backgroundTint="@color/scheme1_blue"
        app:elevation="10dp"
        app:fabSize="mini"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/main_button"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/loc_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_compass"
        app:backgroundTint="@color/scheme1_blue"
        android:textStyle="bold"
        app:elevation="10dp"
        app:fabSize="mini"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/map_button"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/map_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|end"
        android:src="@android:drawable/ic_menu_mapmode"
        android:textStyle="bold"
        app:backgroundTint="@color/scheme1_green"
        app:elevation="10dp"
        app:fabSize="mini"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/ar_button"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="24dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_button"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="16dp"
        android:src="@mipmap/ic_more"
        android:textStyle="bold"
        app:backgroundTint="@color/scheme1_orangeDark"
        app:elevation="10dp"
        app:fabSize="normal"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/trip_container"
        android:layout_marginBottom="16dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/trip_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </android.support.v4.view.ViewPager>

</android.support.constraint.ConstraintLayout>