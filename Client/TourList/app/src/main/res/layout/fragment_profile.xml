<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
      xmlns:tools="http://schemas.android.com/tools"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
     tools:context="com.unimelbit.teamcobalt.tourlist.Home.LoginOrRegisterFragment">

  
 
     <android.support.constraint.ConstraintLayout
         android:layout_width="match_parent"
        android:layout_height="match_parent"
         style="@style/orangeBackground">

         <ImageView
             android:id="@+id/imageView6"
             android:layout_width="145dp"
             android:layout_height="145dp"
             android:padding="15dp"
             app:srcCompat="@mipmap/umaru1"
             android:layout_marginRight="8dp"
             app:layout_constraintRight_toRightOf="parent"
             android:layout_marginLeft="8dp"
             app:layout_constraintLeft_toLeftOf="parent"
             style="@style/circleWhiteBackground"
             android:layout_marginStart="8dp"
             android:layout_marginEnd="8dp"
             app:layout_constraintTop_toTopOf="parent"
             android:layout_marginTop="0dp"
             app:layout_constraintBottom_toBottomOf="parent"
             android:layout_marginBottom="8dp"
             app:layout_constraintVertical_bias="0.2" />
 
         <TextView
             android:id="@+id/profile_username"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="8dp"
             android:layout_marginTop="39dp"
             android:text="Login to see username here"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintTop_toBottomOf="@+id/profile_you_are_signed_in_message"
             android:layout_marginRight="8dp"
             app:layout_constraintRight_toRightOf="parent"
             android:textColor="@color/white"
             android:textSize="20dp"
             android:textStyle="bold"/>

 
         <TextView
             android:id="@+id/profile_you_are_signed_in_message"
            android:layout_width="wrap_content"
           android:layout_height="wrap_content"
             android:text="Are you logged in?"

             android:layout_marginTop="30dp"
             app:layout_constraintTop_toBottomOf="@+id/imageView6"
             android:layout_marginRight="8dp"
             app:layout_constraintRight_toRightOf="parent"
             android:layout_marginLeft="8dp"
             app:layout_constraintLeft_toLeftOf="parent"
             app:layout_constraintHorizontal_bias="0.501"
             android:textColor="@color/white"
             android:textSize="20dp"/>
     </android.support.constraint.ConstraintLayout>
  </FrameLayout>
